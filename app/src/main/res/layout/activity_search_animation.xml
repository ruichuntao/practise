<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_view"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/back"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="14dp"
        android:src="@drawable/complex_search_back"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <EditText
            android:layout_marginEnd="10dp"
            android:id="@+id/search_editText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableStart="@drawable/search_gray"
            android:drawablePadding="4dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="LesPark遇见你"
            android:imeOptions="actionSearch"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#a8a8a8"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/search_editText"
            android:layout_centerVertical="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/add_tag_clear_search_icon"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/search_cancel"
        android:layout_width="50dp"
        android:singleLine="true"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="取消"
        android:textColor="#fa3e54"
        android:visibility="visible" />

</LinearLayout>